<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/flag_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_radio_on_holo_light"
            />

        <TextView
            android:id="@+id/language1"
            android:layout_toRightOf="@id/flag_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:minHeight="@dimen/button_height"
            android:paddingLeft="@dimen/layout_margin_12"
            android:paddingRight="@dimen/layout_margin_12"
            android:textColor="@color/black_100"
            android:text="fasdfadsfasdf"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>