<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffafafa"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/guide_finish_img" />



    <Button
        android:id="@+id/guide_finish_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="86dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/guide_login_blue_btn"
        android:text="开始使用"
        android:textColor="#ffffffff"
        android:textSize="@dimen/guide_button_next_size_hmct" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/guide_finish_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="51dp"
        android:text="设置完毕"
        android:textColor="@color/guide_text_color"
        android:textSize="@dimen/guide_title_text_size" />


</RelativeLayout>