        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true" />
    <include layout="@layout/common_bottom_jump_view" />
</RelativeLayout>