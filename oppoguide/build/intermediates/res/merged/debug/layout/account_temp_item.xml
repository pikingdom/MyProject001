<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/welcome_view_bg"
    android:minHeight="@dimen/oppo_list_item_min_height"
    android:paddingBottom="@dimen/account_item_top_margin"
    android:paddingTop="@dimen/account_item_top_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="42dp"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/tempValue"
            android:textColor="@color/top_text_color"
            android:layout_width="match_parent"
            android:textSize="@dimen/account_title_size"
            android:text="@string/activity_boot_login_title"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/summery"
            android:textColor="@color/account_smalltext_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/account_desc_size"
            android:text="@string/account_discription"
            android:layout_below="@+id/tempValue" />
    </RelativeLayout>

    <RadioButton
        android:id="@+id/radiobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/next_button"
        android:layout_marginRight="18dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center" />

</RelativeLayout>