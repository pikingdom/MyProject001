<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5f5f5">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_marginTop="@dimen/top_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/action_bar_button"
            android:layout_width="@dimen/action_bar_width"
            android:layout_height="@dimen/action_bar_height"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/top_margin_left"
            android:background="@drawable/actionbar_back_button" />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/backTxt"
            android:layout_toRightOf="@+id/action_bar_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/color_green"
            android:textSize="@dimen/back_text_size"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/fingerprint_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_margin_top"
        android:layout_below="@+id/topPanel"
        android:gravity="center"
        android:text="@string/add_fingerprint_title"
        android:textColor="@color/top_text_color"
        android:textSize="@dimen/top_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerprint_title"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="@string/add_fingerprint_summery"
        android:textColor="@color/account_smalltext_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff5f5f5"
        android:layout_marginBottom="@dimen/go_on_text_bottom_margin"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_skip_to_nextstep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/go_on_padding_touch"
                android:text="@string/oppo_account_skip"
                android:textColor="@color/color_green"
                android:textSize="@dimen/go_on_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/set_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/go_on_padding_touch"
                android:text="@string/set_up"
                android:textColor="@color/color_green"
                android:textSize="@dimen/go_on_text_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>