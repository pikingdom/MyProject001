<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="52dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <RadioButton
        android:id="@+id/gn_sw_layout_single_item_RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        style="@style/CustomRadioBtn"/>

    <TextView
        android:id="@+id/gn_sw_layout_single_item_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/gn_sw_layout_single_item_RadioButton"
        android:gravity="left"
        android:textColor="@color/gn_sw_layout_complete_content_title_textColor"
        android:textSize="16sp" />
</RelativeLayout>