<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/app_authority_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:text="@string/agreement_page_title"
        android:textSize="15sp"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/app_authority_title"
        android:background="#e3e3e3"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomlayout"
        android:layout_below="@+id/line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:text="@string/wlan_server"
                    android:textSize="15sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text0"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:text="@string/wifi_server_content_internal_new_wlan"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:id="@+id/check_layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:button="@drawable/huawei_checkbox_service_selector"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="@dimen/layout_margin_16"
                        android:layout_marginTop="@dimen/layout_margin_16"
                        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                        android:singleLine="false"
                        android:text="@string/agree_format"
                        android:textColor="@color/black_100"
                        android:textSize="15sp" />
                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/check_layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="80dp"
                        android:layout_below="@+id/text1"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkbox2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:button="@drawable/huawei_checkbox_service_selector"
                            android:clickable="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginBottom="@dimen/layout_margin_16"
                            android:layout_marginTop="@dimen/layout_margin_16"
                            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                            android:singleLine="false"
                            android:text="@string/disagree_format"
                            android:textColor="@color/black_100"
                            android:textSize="15sp" />
                    </LinearLayout>
                </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativelayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/relativelayout1">
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:text="@string/weather_service_title"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:text="@string/weather_service_message"
                    android:textSize="13sp"
                    android:layout_below="@+id/text2" />

                <LinearLayout
                    android:id="@+id/check_layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text3"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:button="@drawable/huawei_checkbox_service_selector"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="@dimen/layout_margin_16"
                        android:layout_marginTop="@dimen/layout_margin_16"
                        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                        android:singleLine="false"
                        android:text="@string/agree_format"
                        android:textColor="@color/black_100"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/check_layout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:layout_below="@+id/text3"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:button="@drawable/huawei_checkbox_service_selector"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="@dimen/layout_margin_16"
                        android:layout_marginTop="@dimen/layout_margin_16"
                        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                        android:singleLine="false"
                        android:text="@string/disagree_format"
                        android:textColor="@color/black_100"
                        android:textSize="15sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/relativelayout2">
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:text="@string/huawei_magezine_lock_update"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text4"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:text="@string/huawei_magezine_lock_update_desc"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:id="@+id/check_layout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text5"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:button="@drawable/huawei_checkbox_service_selector"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="@dimen/layout_margin_16"
                        android:layout_marginTop="@dimen/layout_margin_16"
                        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                        android:singleLine="false"
                        android:text="@string/agree_format"
                        android:textColor="@color/black_100"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/check_layout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:layout_below="@+id/text5"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:button="@drawable/huawei_checkbox_service_selector"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="@dimen/layout_margin_16"
                        android:layout_marginTop="@dimen/layout_margin_16"
                        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                        android:singleLine="false"
                        android:text="@string/disagree_format"
                        android:textColor="@color/black_100"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#dbffffff"
        android:gravity="right"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/nextstep_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_right"
            android:drawablePadding="6dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="@color/light_blue"
            android:text="@string/next_format"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>