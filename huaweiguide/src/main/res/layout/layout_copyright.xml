<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/copyright_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin_8"
        android:layout_marginTop="@dimen/layout_margin_16"
        android:ellipsize="end"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:singleLine="false"
        android:text="@string/device_permitted_agreement"
        android:textColor="@color/black_100"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/copyright_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/copyright_title"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:lineSpacingMultiplier="1.1"
        android:text="@string/device_agreement_info"
        android:textColor="@color/black_100"
        android:textSize="13sp" />
</RelativeLayout>