<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/data_migration_rl"
    android:background="@color/button_bar_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/logo_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_title_bg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/icon_transfer"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/data_migration_title"
            android:textColor="@color/black_100"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mid_layout"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <View
            android:layout_below="@id/logo_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_title"
                    android:textSize="15sp"
                    android:text="@string/data_migration_line1_title"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_desc"
                    android:text="@string/data_migration_line1_desc"/>
            </LinearLayout>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right_gray"/>
        </RelativeLayout>
        <View
            android:layout_below="@id/logo_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_title"
                    android:textSize="15sp"
                    android:text="@string/data_migration_line2_title"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_desc"
                    android:text="@string/data_migration_line2_desc"/>
            </LinearLayout>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right_gray"/>
        </RelativeLayout>
        <View
            android:layout_below="@id/logo_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <RelativeLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_title"
                    android:textSize="15sp"
                    android:text="@string/data_migration_line3_title"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_desc"
                    android:text="@string/data_migration_line3_desc"/>
            </LinearLayout>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right_gray"/>
        </RelativeLayout>
        <View
            android:layout_below="@id/logo_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/button_bar_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/button_bar" />
    </FrameLayout>

    <com.adapter.honoradapter.view.DataMigrationDialogView
        android:id="@+id/verify_dialog_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>
</RelativeLayout>