<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/my_phone_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/zte_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#fff4f4f4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/my_phone_title"
            android:textColor="#ff191919"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_shape2"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_below="@id/zte_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/my_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bottom_text"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="10dp"
                android:maxLength="50"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:gravity="left|center_vertical"
                android:textSize="16sp"
                android:text="ZTE_S2004_5684"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="10dp"
                android:background="#334D87"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textSize="15sp"
                android:textColor="#888888"
                android:text="@string/my_phone_name_tip2"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="6dp"
                android:background="#c8c8c8"
                />
        </LinearLayout>

        <LinearLayout
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <RelativeLayout
                  android:layout_marginTop="14dp"
                  android:layout_marginLeft="14dp"
                  android:layout_marginRight="14dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:orientation="vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/my_phone_update_info"
                          android:textSize="17sp"
                          android:textColor="@color/bottom_text"
                          android:id="@+id/textView" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:text="@string/my_phone_update_info_tip"
                          android:textSize="15sp"
                          />
                  </LinearLayout>
                  <ToggleButton
                      android:id="@+id/my_phone_update_info_toggle_togglebt"
                      android:layout_width="45dp"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content"
                      android:background="@android:color/transparent"
                      android:button="@drawable/checkbox_my_phone"
                      android:checked="true"
                      android:text=""
                      android:textOff=""
                      android:textOn="" />

              </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="#c8c8c8"
                />

            <RelativeLayout
                android:layout_marginTop="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_phone_App_update_info"
                        android:textSize="17sp"
                        android:textColor="@color/bottom_text"
                        android:id="@+id/textView2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/my_phone_App_update_info_tip"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <ToggleButton
                    android:id="@+id/my_phone_App_update_info_toggle_togglebt"
                    android:layout_width="45dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_my_phone"
                    android:checked="true"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="#c8c8c8"
                />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我愿意使用语音助手"
                        android:textSize="17sp"
                        android:textColor="@color/bottom_text"
                        android:id="@+id/textView4" />

                    <TextView
                        android:id="@+id/my_phone_zte_voice_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="语音助手权限声明"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <ToggleButton
                    android:id="@+id/my_phone_zte_voice_privacy_tg"
                    android:layout_width="45dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_my_phone"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="#c8c8c8"
                />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_phone_join_in_Update"
                        android:textSize="17sp"
                        android:textColor="@color/bottom_text"
                        android:id="@+id/textView3" />

                    <TextView
                        android:id="@+id/my_phone_zte_user_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/my_phone_zte_user_agreement"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <ToggleButton
                    android:id="@+id/my_phone_join_in_Update_toggle"
                    android:layout_width="45dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_my_phone"
                    android:checked="true"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>
          </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zte_control_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/btn_shape1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/zte_previous_step_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:text="@string/previous_step"
                />

            <TextView
                android:id="@+id/zte_next_step_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:text="@string/next_step"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>