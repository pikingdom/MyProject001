<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/zte_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#fff4f4f4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/zte_0840_insert_sim"
            android:textColor="#ff191919"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_shape2"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/sim_logo"
        android:layout_below="@id/zte_title_layout"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pic_sim_crad_zte0840"
        />
    <TextView
        android:id="@+id/view_sim_desc"
        android:layout_below="@id/sim_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/bottom_text"
        android:textSize="15sp"
        android:text="@string/sim_desc"/>

    <LinearLayout
        android:id="@+id/zte_control_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/btn_shape1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/zte_previous_step_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:text="@string/previous_step"
                />

            <TextView
                android:id="@+id/zte_next_step_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:text="@string/skip_step"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>