<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_sim_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sim_card"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sim_insert_please"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/view_sim_desc"
        android:layout_below="@id/view_sim_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/bottom_text"
        android:textSize="18sp"
        android:text="@string/sim_desc"/>

    <include layout="@layout/bottom_buttons" />

</RelativeLayout>