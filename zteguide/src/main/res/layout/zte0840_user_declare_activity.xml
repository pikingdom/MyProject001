<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff4f4f4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/zte0840_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/zte0840_btn_back"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_toRightOf="@id/zte0840_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="@string/user_exp_zte_declare_title_1"
            android:textColor="#ff191919"
            android:textSize="18sp"
            />


    </RelativeLayout>

    <ImageView
        android:id="@+id/shadow"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/btn_shape2"/>

    <LinearLayout
        android:layout_below="@id/shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/common_bg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="70dp">

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/bottom_text"
                android:textSize="17sp"
                android:text="@string/user_exp_content" />
        </ScrollView>

    </LinearLayout>

    <com.zteguidedemo.widget.AutoBgButton
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector"
        android:text="@string/user_exp_back"
        android:textColor="@color/bottom_text" />

</RelativeLayout>