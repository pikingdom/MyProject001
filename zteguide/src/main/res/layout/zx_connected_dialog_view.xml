<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/zx_ssid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="@color/zx_dark_blue"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:layout_marginLeft="30dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/zx_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lineSpacingMultiplier="1.0"
                android:minHeight="120dp"
                android:textColor="@color/gray_light2"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/zx_bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/zx_negativeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/light_black"
                android:textSize="16sp"
                android:text="@string/zx_cancel_wifi"/>

            <TextView
                android:id="@+id/zx_neutralButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/light_black"
                android:visibility="gone"
                android:text="@string/zx_connect_wifi"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/zx_positiveButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/light_black"
                android:textSize="16sp"
                android:text="@string/zx_forgot_wifi"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>